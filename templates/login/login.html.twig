{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex justify-content-center mt-5">
  <div class="card p-4" style="width: 360px;">
    <h2 class="text-center mb-4">Connexion</h2>

    {{ form_start(loginForm) }}
      {{ form_row(loginForm._username, { attr: { class: 'form-control text-center' } }) }}
      {{ form_row(loginForm._password, { attr: { class: 'form-control text-center' } }) }}

      <div class="text-end mb-3">
        <a href="{{ path('app_forgot_password') }}" class="small">Mot de passe oublié ?</a>
      </div>

      <button type="submit" class="btn btn-primary w-100">Connexion</button>
    {{ form_end(loginForm, { render_rest: false }) }}
  </div>
</div>

{# Message d’erreur sous le formulaire #}
<div class="d-flex justify-content-center mt-3">
  <div style="width: 360px;">
    {% for msg in app.flashes('error') %}
      <div class="alert alert-danger text-center mb-0">
        Identifiant ou mot de passe incorrect
      </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
