{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Mot de passe oublié</h1>

    {{ form_start(forgotForm) }}
        <div class="mb-3">
            {{ form_label(forgotForm.email) }}
            {{ form_widget(forgotForm.email) }}
            {{ form_errors(forgotForm.email) }}
        </div>
        <button type="submit" class="btn btn-primary">Envoyer le lien</button>
    {{ form_end(forgotForm) }}

    <p class="mt-3">
        <a href="{{ path('app_login') }}">Retour à la connexion</a>
    </p>
</div>
{% endblock %}
