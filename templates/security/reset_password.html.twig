{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Réinitialiser le mot de passe</h1>

    {{ form_start(resetForm) }}
        <div class="mb-3">
            {{ form_label(resetForm.plainPassword) }}
            {{ form_widget(resetForm.plainPassword) }}
            {{ form_errors(resetForm.plainPassword) }}
        </div>
        <div class="mb-3">
            {{ form_label(resetForm.confirmPassword) }}
            {{ form_widget(resetForm.confirmPassword) }}
            {{ form_errors(resetForm.confirmPassword) }}
        </div>
        <button type="submit" class="btn btn-success">Valider</button>
    {{ form_end(resetForm) }}

    <p class="mt-3">
        <a href="{{ path('app_login') }}">Retour à la connexion</a>
    </p>
</div>
{% endblock %}
